{
    "root": true,
    "extends": "airbnb",
    "installedESLint": true,
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "globals": {
        "window": true,
        "alert": false
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "no-console": [
            "off",
            {"allow": ["warn", "error"]}
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "off",
            "single"
        ]
    }
}
